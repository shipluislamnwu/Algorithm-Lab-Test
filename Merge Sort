#include<iostream>
#include<cstdlib>
using namespace std;

void merg(int arr[], int l, int mid, int r) {
    int p = mid - l + 1;
    int w = r - mid;

    int *arr1 = new int[p];
    int *arr2 = new int[w];

    for (int i = 0; i < p; i++)
        arr1[i] = arr[l + i];
    for (int i = 0; i < w; i++)
        arr2[i] = arr[mid + 1 + i];

    int s = 0, h = 0, t = l;

    while (s < p && h < w) {
        if (arr1[s] < arr2[h])
            arr[t++] = arr1[s++];
        else
            arr[t++] = arr2[h++];
    }

    while (s < p)
        arr[t++] = arr1[s++];
    while (h < w)
        arr[t++] = arr2[h++];

    delete[] arr1;
    delete[] arr2;
}

void mrgsort(int arr[], int l, int r) {
    if (l < r) {
        int mid = (l + r) / 2;
        mrgsort(arr, l, mid);
        mrgsort(arr, mid + 1, r);
        merg(arr, l, mid, r);
    }
}

int main() {
    int n;
    cout << "Input array size: ";
    cin >> n;

    int arr[n];
    for (int i = 0; i < n; i++)
        arr[i] = rand() % 100;

    cout << "Before sorting: ";
    for (int i = 0; i < n; i++)
        cout << arr[i] << " ";
    cout << endl;

    mrgsort(arr, 0, n - 1);

    cout << "After sorting: ";
    for (int i = 0; i < n; i++)
        cout << arr[i] << " ";
    cout << endl;

    return 0;
}
