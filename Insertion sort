/// Insertion sort.
#include<iostream>
using namespace std;
int main()
{
    int n,i,t,j;
    cout<<"Enter the array range: ";
    cin>>n;
    int a[n];


    for(i=0; i<n; i++)
    {
        cin>>a[i];
    }


    cout<<"Before sort: ";
    for(i=0; i<n; i++)
    {
        cout<<a[i]<<" ";
    }


    for(i=1; i<n; i++)
    {
        t=a[i];
        j=i-1;
        while(j>=0 && t<a[j])
        {
            a[j+1]=a[j];
            j--;
        }
        a[j+1]=t;
    }

    cout<<endl;
    cout<<"After sort: ";
    for(i=0; i<n; i++)
    {
        cout<<a[i]<<" ";
    }
    return 0;
}
