/// Top down
#include <iostream>
using namespace std;

int main() {
    int n, k;

    cout << "Number of rows: ";
    cin >> n;
    cout << "Number of columns: ";
    cin >> k;

    int arr[50][50];


    for (int i = 0; i <= n; i++) {
        arr[i][0] = 1;
        arr[i][i] = 1;
    }

    for (int i = 2; i <= n; i++) {
        for (int j = 1; j < i && j <= k; j++) {
            arr[i][j] = arr[i - 1][j - 1] + arr[i - 1][j];
        }
    }

    for (int i = 0; i <= n; i++) {
        for (int j = 0; j <= i && j <= k; j++) {
            cout << arr[i][j] << " ";
        }
        cout << endl;
    }

    cout << "\nResult : " << arr[n][k] << endl;

    return 0;
}
